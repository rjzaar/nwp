# Varbase Recipe Environment Configuration
# Recipe: varbase

# Drupal configuration
DRUPAL_PROFILE=varbase
DRUPAL_WEBROOT=docroot
DRUPAL_THEME=vartheme_bs5

# Services - Varbase works well with these
REDIS_ENABLED=1
SOLR_ENABLED=1

# Development
DEV_MODULES="devel kint webprofiler stage_file_proxy"
DEV_COMPOSER="drupal/devel drupal/stage_file_proxy"

# Private files
DRUPAL_PRIVATE_FILES=../private

# Deployment
DEPLOY_METHOD=rsync

# Varbase specific
# Layout builder settings
VARBASE_LAYOUT_BUILDER_ENABLED=1
